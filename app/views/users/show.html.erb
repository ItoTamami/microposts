<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
      <div> <%= gravatar_for @user %></div>
      <div>Name: <%= @user.name %></div>
      <div>Area: <%= @user.area %></div>
      <div>Profile: <%= @user.profile %></div>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>  <!-- #add L7.9.5  -->
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
